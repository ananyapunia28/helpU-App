<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bluecard"
                    android:paddingBottom="25dp"
                    android:id="@+id/bb"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/menu"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_margin="20dp"
                        android:id="@+id/menuy"
                        />

                    <ImageView
                        android:id="@+id/notificationbellllll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mybell"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_black"
                        android:textSize="26sp"
                        app:layout_constraintTop_toBottomOf="@+id/menuy"
                        app:layout_constraintLeft_toLeftOf="@id/menuy"
                        android:layout_marginTop="16dp"
                        android:id="@+id/welcometxt"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stuck in a problem ?"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins"
                        android:textSize="22sp"
                        app:layout_constraintTop_toBottomOf="@+id/welcometxt"
                        app:layout_constraintLeft_toLeftOf="@id/menuy"
                        android:layout_marginTop="16dp"
                        android:id="@+id/stucked"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find some volunteers near by you and get an urgent assistance right now !"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/stucked"
                        app:layout_constraintLeft_toLeftOf="@id/menuy"
                        android:id="@+id/stucktxt"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/stucktxt"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="16dp"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:background="@drawable/redcard"
                            android:layout_marginRight="10dp"
                            android:id="@+id/locatenow"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/location"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_margin="12dp"
                                android:id="@+id/loc1"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Locate Now"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/loc1"
                                android:textSize="16sp"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:background="@drawable/blueeey"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/help"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/peace"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_margin="12dp"
                                android:id="@+id/help1"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Help Request"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/help1"
                                android:textSize="14sp"
                                android:layout_marginLeft="5dp"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Near By Places"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_margin="20dp"
                        android:id="@+id/nearrr"
                        />
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:layout_constraintTop_toBottomOf="@+id/nearrr"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:scrollbars="none"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="110dp"
                                android:layout_marginTop="10dp"
                                app:layout_constraintLeft_toRightOf="@id/crutchy"
                                app:layout_constraintTop_toTopOf="@id/crutchy"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/mallcard"
                                >
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        android:layout_marginTop="10dp"
                                        android:padding="5dp"
                                        android:src="@drawable/mall"
                                        android:id="@+id/mall"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Malls"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/mall"
                                        android:layout_marginTop="15dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/poppins"
                                        />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="110dp"
                                android:layout_marginTop="10dp"
                                app:layout_constraintLeft_toRightOf="@id/crutchy"
                                app:layout_constraintTop_toTopOf="@id/crutchy"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/hospitalscard"
                                >
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        android:padding="5dp"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/hospital"
                                        android:id="@+id/hospital"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hospitals"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/hospital"
                                        android:layout_marginTop="15dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/poppins"
                                        />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="110dp"
                                android:layout_marginTop="10dp"
                                app:layout_constraintLeft_toRightOf="@id/crutchy"
                                app:layout_constraintTop_toTopOf="@id/crutchy"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/bankscard"
                                >
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        android:layout_marginTop="10dp"
                                        android:padding="5dp"
                                        android:src="@drawable/bank"
                                        android:id="@+id/bank"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Banks"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/bank"
                                        android:layout_marginTop="15dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/poppins"
                                        />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="110dp"
                                android:layout_marginTop="10dp"
                                app:layout_constraintLeft_toRightOf="@id/crutchy"
                                app:layout_constraintTop_toTopOf="@id/crutchy"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/librarycard"

                                >
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        android:layout_marginTop="10dp"
                                        android:padding="5dp"
                                        android:src="@drawable/library"
                                        android:id="@+id/library"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Library"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/library"
                                        android:layout_marginTop="15dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/poppins"
                                        />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="110dp"
                                android:layout_marginTop="10dp"
                                app:layout_constraintLeft_toRightOf="@id/crutchy"
                                app:layout_constraintTop_toTopOf="@id/crutchy"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/restaurantcard"
                                >
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        android:padding="5dp"    app:layout_constraintRight_toRightOf="parent"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/restaurant"
                                        android:id="@+id/restaurant"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Restraunts"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/restaurant"
                                        android:layout_marginTop="15dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/poppins"
                                        />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="110dp"
                                android:layout_marginTop="10dp"
                                app:layout_constraintLeft_toRightOf="@id/mall"
                                app:layout_constraintTop_toTopOf="@id/mall"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/toiletcard"
                                >
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        android:layout_marginTop="10dp"
                                        android:padding="5dp"
                                        android:src="@drawable/toilets"
                                        android:id="@+id/toilety"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Toilets"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/toilety"
                                        android:layout_marginTop="15dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/poppins"
                                        />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </HorizontalScrollView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_margin="20dp"
                    android:id="@+id/donatecard"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/cyancard"
                        android:layout_height="80dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/xyzq"
                        >

                    </RelativeLayout>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottiee"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:elevation="10dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        app:lottie_rawRes="@raw/savingmoney"
                        app:lottie_speed="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wanna help others ?"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="@id/xyzq"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/ss"
                        app:layout_constraintLeft_toLeftOf="@+id/lottiee"
                        android:fontFamily="@font/poppins_bold"
                        />
                    <TextView
                        app:layout_constraintTop_toBottomOf="@+id/ss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donate now to help others There are \nover 1 billion needy people   "
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="@id/xyzq"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"
                        app:layout_constraintLeft_toLeftOf="@id/ss"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:fontFamily="@font/poppins"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book A Service"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_margin="20dp"
                        android:id="@id/bookaservicetxt"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintTop_toBottomOf="@+id/bookaservicetxt"
                        app:layout_constraintLeft_toLeftOf="@id/bookaservicetxt"
                        android:layout_margin="5dp"
                        android:id="@+id/wheely"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/wheelchair"
                                android:id="@+id/wheelchairimg"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wheelchair"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/wheelchairimg"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintLeft_toRightOf="@id/wheely"
                        app:layout_constraintTop_toTopOf="@id/wheely"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/crutchy"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/disabled"
                                android:id="@+id/crutches"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Crutches"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/crutches"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:layout_constraintLeft_toRightOf="@id/crutchy"
                        app:layout_constraintTop_toTopOf="@id/crutchy"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/helpuuu"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/helper"
                                android:id="@+id/helper"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Helper"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/helper"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_margin="20dp"
                    android:id="@+id/goi_explore"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/pinkcard"
                        android:layout_height="80dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/xyz"
                        >

                    </RelativeLayout>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/assist"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore the new Opportunities !"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="@id/xyz"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/pp"
                        android:fontFamily="@font/poppins_bold"
                        />

                    <TextView
                        android:layout_width="182dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="GOI frequently release brand \n new opportunities."
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="@id/pp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pp"
                        app:layout_constraintTop_toTopOf="@id/xyz" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
